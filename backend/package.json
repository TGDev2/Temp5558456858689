{
  "name": "artisanconnect-backend",
  "version": "1.0.0",
  "description": "Backend API pour ArtisanConnect - Gestion de rendez-vous pour artisans",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "migrate:latest": "knex migrate:latest --knexfile knexfile.js",
    "migrate:rollback": "knex migrate:rollback --knexfile knexfile.js",
    "migrate:status": "knex migrate:status --knexfile knexfile.js",
    "seed:run": "knex seed:run --knexfile knexfile.js",
    "db:reset": "npm run migrate:rollback && npm run migrate:latest && npm run seed:run",
    "db:setup": "npm run migrate:latest && npm run seed:run"
  },
  "keywords": [
    "booking",
    "artisan",
    "appointments",
    "calendar",
    "stripe"
  ],
  "author": "ArtisanConnect",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.22.1",
    "helmet": "^7.2.0",
    "joi": "^17.13.3",
    "knex": "^3.1.0",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
